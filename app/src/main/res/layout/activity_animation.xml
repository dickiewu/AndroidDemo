<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    tools:context = "name.dickie.android.demo.activity.AnimationActivity"
    >

    <name.dickie.android.demo.widget.AutoLineLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@drawable/border_bg"
        >
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick = "test1"
            android:text = "测试1"
            />

    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:onClick = "test2"
        android:text = "测试2"
        />

        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick = "test3"
            android:text = "测试3"
            />

        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick = "test4"
            android:text = "测试4"
            />
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:onClick = "test5"
            android:text = "测试5"
            />

        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text="测试组合动画"
            android:onClick="testAnimatorSet"
            />


    </name.dickie.android.demo.widget.AutoLineLayout>

    <ImageView
        android:id="@+id/norway"
        android:layout_width = "match_parent"
        android:layout_height = "200dp"
        android:src="@drawable/norway_swiden_border"
        />



    <name.dickie.android.demo.widget.DynamicCircleView
        android:id = "@+id/dynamic_circle_view"
        android:layout_width = "200dp"
        android:layout_height = "200dp"
        />

    <View
        android:id = "@+id/animate_test"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        />

</LinearLayout>
