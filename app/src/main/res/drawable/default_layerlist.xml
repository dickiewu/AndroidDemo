<?xml version="1.0" encoding="utf-8"?>
<!--layerlist 可以作为根节点, 也可作为selector 的item元素
    按
-->
<layer-list xmlns:android = "http://schemas.android.com/apk/res/android">
    <!--item 中设置偏移量-->
    <item
        android:left = "30dp"
        android:top = "20dp">
        <shape
               android:shape = "oval"
            >
            <solid android:color = "#22ffffff" />

            <!--宽高都相同是圆-->
            <size
                android:width = "20dp"
                android:height = "20dp" />
            <padding
                android:bottom = "5dp"
                android:left = "5dp"
                android:right = "5dp"
                android:top = "5dp" />
        </shape>
    </item>

    <item
        android:right = "30dp" android:drawable="@drawable/ic_close">
    </item>
</layer-list>